<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_2sdp"
    android:orientation="horizontal"
    app:cardCornerRadius="10dp"
    app:strokeWidth="@dimen/_1sdp"
    app:strokeColor="@color/gray"
    app:cardElevation="@dimen/_4sdp">

    <LinearLayout
        android:id="@+id/list_view_mainPage_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <ImageView
            android:id="@+id/list_view_mainPage_imageView_meal"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.5"
            android:scaleType="fitXY"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/assortment_pieces_cake" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_view_mainPage_textView_name_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-black"
                android:text="cake"
                android:textColor="@color/black"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.077"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:id="@+id/duration2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_200"
                android:layout_marginStart="28dp"
                android:text="@string/hour_number2"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text=" available"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/_30sdp"
                    android:src="@drawable/person"
                    android:layout_height="@dimen/_20sdp" />

                <TextView
                    android:id="@+id/list_view_mainPage_textView_userName"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="sans-serif-black"
                    android:maxLength="10"
                    android:text=""
                    android:textSize="@dimen/_10ssp" />

                <CheckBox
                    android:id="@+id/fvimg"
                    android:layout_width="24dp"
                    android:layout_marginStart="-30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:button="@drawable/favorite" />

                <TextView
                    android:id="@+id/favourite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="sans-serif-black"
                    android:maxLength="10"
                    android:text="0"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/view_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableStart="@drawable/eye"
                    android:drawablePadding="@dimen/_8sdp"
                    android:fontFamily="sans-serif-black"
                    android:text="0"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:drawableStart="@drawable/location"
                    android:drawablePadding="@dimen/_5sdp"
                    android:fontFamily="sans-serif-black"
                    android:gravity="center"
                    android:maxLength="10"
                    android:text="alhasnaa"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    android:id="@+id/list_view_mainPage_textView_justadded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:text="just added"
                    android:textColor="@color/teal_200"
                    android:textSize="14dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>